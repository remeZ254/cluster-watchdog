{
  "name": "cluster-watchdog",
  "version": "0.0.2",
  "description": "A package for managing active-standby applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "start:dev": "ts-node src/playground.ts",
    "test": "vitest run",
    "test:dev": "vitest",
    "lint": "tsc",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "changeset": "changeset",
    "release": "pnpm run ci && changeset publish"
  },
  "author": {
    "name": "Zemer Hiyret",
    "email": "zemer.hi@gmail.com",
    "url": "https://linkedin.com/in/zemer-hiyret"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/remeZ254/cluster-watchdog.git"
  },
  "license": "MIT",
  "keywords": [
    "cluster",
    "watchdog",
    "standby",
    "active-standby",
    "active-passive"
  ],
  "dependencies": {
    "node-zookeeper-client": "^1.1.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@types/node": "^16.11.7",
    "@types/node-zookeeper-client": "^0.2.8",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^4.9.3",
    "vitest": "^0.31.1"
  }
